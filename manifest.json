{
  "manifest_version": 3,
  "name": "ChatGPT Custom instructions Changer",
  "version": "1.0",
  "description": "An example Chrome extension using Vue.js",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["js/content.js"]
    }
  ]
}
